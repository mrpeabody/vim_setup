{
  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "suggest.autoTrigger": "always",
  "suggest.minTriggerInputLength": 2,
  "suggest.snippetIndicator": "",
  "suggest.detailField": "abbr",
  "inlayHint.display": false,

  "diagnostic.enable": true,
  "diagnostic.virtualText": false,
  "diagnostic.enableSign": true,
  "diagnostic.enableHighlightLineNumber": true,
  "diagnostic.errorSign": "X",
  "diagnostic.warningSign": "âš ",
  "diagnostic.infoSign": "\uf449",
  "diagnostic.hintSign": "\uf432",

  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.jumpCommand": "edit",

  "signature.preferShownAbove": false,

  "eslint.rules.customizations": [
    {
      "rule": "*",
      "severity": "warn"
    },
    {
      "rule": "eqeqeq",
      "severity": "error"
    }
  ],

  "tsserver.reportStyleChecksAsWarnings": true,
  "python.pythonPath": "/usr/bin/python3",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8CategorySeverity.E": "Warning",
  "python.linting.flake8CategorySeverity.F": "Warning",
  "python.linting.flake8Args": [
      "--max-line-length=120",
      "--ignore=E402,F841,F401,E302,E305"
  ],

  "clangd.path": "clangd",
  "clangd.arguments": [
    "--background-index",
    "--header-insertion=never",
    "--completion-style=detailed"
  ],

  "coc.source.buffer.enable": true,

  "snippets.ultisnips.directories": ["UltiSnips", "CustomSnippets"],
}
